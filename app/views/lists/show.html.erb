<h1>Movies in List <%= @list.name %></h1>
<ul>
  <% @list.movies.each do |movie| %>
    <li>
      <strong>Title</strong>
      <%= movie.id%>
      <%= movie.title%>
      <strong>Overview:</strong>
      <%= movie.overview%>
      <% @bookmark = Bookmark.where(list_id: @list, movie_id: movie).first %>
      <%= link_to "delete", bookmark_path(@bookmark), method: :delete, class: "btn btn-primary" %>
    </li>


  <% end %>
</ul>
<%= link_to "back", lists_path, class: "btn btn-primary" %>
<%= link_to "Add a new movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
